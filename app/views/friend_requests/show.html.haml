.white-text
  %h1
    申請承認

  = link_to "フレンド申請", new_friend_request_path
  = link_to "申請一覧", friend_requests_path
  %br

  - if @users.empty?
    = "申請者はいません。"
  - else
    %table
      %thead
        %tr
          %th.col-7
            名前
          %th.col-7
            学科
          %th.col-7
            申請
      %tbody
        - @users.each do |user|
          %tr
            %td
              = user.applicant.name
            %td
              = user.applicant.department.name
            %td
              = "承認"
            %td
              = link_to '拒否', friend_request_path(user.id), method: :delete, data: {confirm: '申請を拒否しますか？'}, class: 'btn btn-danger'