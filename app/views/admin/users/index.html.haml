.devise
  .devise__container.user-edit
    %h1
      ユーザー一覧
    %table
      %thead
        %tr
          %th.col-7
            名前
          %th.col-7
            メールアドレス
          %th.col-7
            学科
          %th.col-7
            管理者権限
          %th.col-7
          %th.col-7
      %tbody
        - @users.each do |user|
          %tr
            %td
              = "#{user.name}"
            %td
              = "#{user.email}"
            %td
              = "#{user.department.name}"
            %td
              = "#{user.admin}"
            %td
              = link_to '編集', edit_admin_user_path(user.id), class: 'btn btn-outline-dark'
              = link_to '削除', admin_user_path(user.id), method: :delete, data: {confirm: '削除しますか？'}, class: 'btn btn-danger'